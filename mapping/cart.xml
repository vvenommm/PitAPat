<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap 
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
	 
<!--이 문서는 iBatis에서 처리하여 실행할 SQL문을 작성하는 문서입니다. -->
<sqlMap namespace = "cart">
	<select id="getAllCart" resultClass="cartVO">
		SELECT * FROM CART
	</select>
	
	<select id="inCart" resultClass="cartVO">
		SELECT * FROM CART WHERE CART_PAY = 'N'
	</select>
	
	<select id="payedCart" resultClass="cartVO">
		SELECT * FROM CART WHERE CART_PAY = 'Y'
	</select>

</sqlMap>
